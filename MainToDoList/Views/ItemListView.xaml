<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MainToDoList.Views.ItemListView"
             BackgroundColor="#73C2FB">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- انتخاب دسته -->
            <Picker x:Name="TaskCategoryPicker"
                    Title="Select Category"
                    TextColor="#FF894F"
                    TitleColor="#FF894F"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                    SelectedIndexChanged="OnCategorySelected"/>

            <!-- لیست -->
            <CollectionView x:Name="ItemsView"
                            ItemsSource="{Binding FilteredItems}"
                            ItemsUpdatingScrollMode="KeepScrollOffset"
                            HeightRequest="500"
                            IsVisible="True">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               BackgroundColor="CadetBlue"
                               CornerRadius="10"
                               Margin="5"
                               HorizontalOptions="Fill">
                            <Grid ColumnDefinitions="Auto,*,Auto"
                                  RowDefinitions="Auto,Auto"
                                  HorizontalOptions="Fill">

                                <CheckBox Grid.Row="0" Grid.Column="0"
                                          Color="#FF894F"
                                          IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                          CheckedChanged="OnTaskCheckedChanged"
                                          VerticalOptions="Center"/>

                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       TextColor="LightGray"
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource StrikeConverter}}"/>

                                <Label Grid.Row="0" Grid.Column="2"
                                       Text="{Binding CategoryIconText}"
                                       FontSize="20"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center"/>

                                <!-- اطلاعات تسک با اسکرول افقی -->
                                <ScrollView Orientation="Horizontal"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="3"
                                            Margin="0,10,0,0">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="📅" FontSize="14"/>
                                        <Label Text="{Binding TaskDate, StringFormat='{0:yyyy/MM/dd}'}" FontSize="14"/>
                                        <Label Text="⏰" FontSize="14"/>
                                        <Label Text="{Binding TaskTime, StringFormat='{0:hh\\:mm}'}" FontSize="14"/>
                                        <Label Text="🧩" FontSize="14"/>
                                        <Label Text="{Binding SubTasks.Count, StringFormat='Subtasks: {0}'}" FontSize="14"/>
                                    </HorizontalStackLayout>
                                </ScrollView>
                            </Grid>

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTaskTapped"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- حالت خالی -->
            <StackLayout x:Name="EmptyStateView"
                         IsVisible="False"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Padding="20"
                         Spacing="10">

                <Frame HasShadow="True"
                       CornerRadius="20"
                       Padding="0"
                       BackgroundColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       WidthRequest="215"
                       HeightRequest="121">
                    <Grid>
                        <Image Source="oops.jpeg"
                               Aspect="AspectFit"
                               HorizontalOptions="Fill"
                               VerticalOptions="Fill"
                               Margin="0" />
                    </Grid>
                </Frame>

                <Label x:Name="EmptyStateLabel"
                       Text="No tasks available."
                       FontSize="18"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center" />

                <!-- فلش و متن راهنما -->
                <StackLayout x:Name="ClickHint"
                             IsVisible="False"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="5"
                             Margin="0,10,0,0">
                    <Label Text="Click here"
                           FontSize="16"
                           TextColor="#FF894F"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <Label Text="⤵"
                           FontSize="70"
                           TextColor="#FF894F"
                           HorizontalTextAlignment="Center"
                           Margin="0,-10,0,0" />
                </StackLayout>
            </StackLayout>

            <!-- دکمه افزودن با قاب نارنجی -->
            <Frame x:Name="AddButtonFrame"
                   Padding="3"
                   CornerRadius="35"
                   BorderColor="#FF894F"
                   IsVisible="True"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center">
                <ImageButton Source="plus.jpeg"
                             WidthRequest="60"
                             HeightRequest="60"
                             BackgroundColor="#73C2FB"
                             BorderColor="#73C2FB"
                             Clicked="OnAddTaskClicked">
                    <ImageButton.Clip>
                        <EllipseGeometry Center="30,30" RadiusX="27" RadiusY="27"/>
                    </ImageButton.Clip>
                </ImageButton>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>